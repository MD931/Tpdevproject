<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:id="@+id/detail_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detail_description"
            android:text="@string/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/detail_text_posted"
            android:layout_below="@+id/detail_description"
            android:text="@string/posted_in"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/detail_date_post2"
            android:layout_below="@+id/detail_description"
            android:layout_toRightOf="@id/detail_text_posted"
            android:layout_marginLeft="10dp"
            android:text="27 dec 2017 12:06"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/holder_date_begin"
            android:layout_below="@+id/detail_date_post2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/begin_in"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/detail_date_begin"
                android:layout_marginLeft="10dp"
                android:text="27 dec 2017 12:06"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/holder_date_end"
            android:layout_below="@+id/holder_date_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_below="@+id/detail_description"
                android:text="@string/end_in"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/detail_date_end"
                android:layout_below="@+id/detail_description"
                android:layout_toRightOf="@id/detail_text_posted"
                android:layout_marginLeft="10dp"
                android:text="27 dec 2017 12:06"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>